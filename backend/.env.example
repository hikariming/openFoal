# Server
PORT=4000

# PostgreSQL
# Use a NEW database to avoid touching your existing aidb5 data.
DATABASE_URL=postgresql://<db_user>:<db_password>@<db_host>:5432/<new_db_name>?connection_limit=5&socket_timeout=30

# JWT
JWT_SECRET=<jwt_secret>
JWT_EXPIRATION=1d

# Redis
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_DB=0
REDIS_USERNAME=
REDIS_PASSWORD=

# MinIO
MINIO_ENDPOINT=127.0.0.1
MINIO_PORT=9000
MINIO_ROOT_USER=<minio_user>
MINIO_ROOT_PASSWORD=<minio_password>
MINIO_BUCKET_NAME=avatars
MINIO_USE_SSL=false

# Gitea
GITEA_URL=http://127.0.0.1:3001
GITEA_ADMIN_TOKEN=<gitea_admin_token>

# Monitor
MONITOR_RETENTION_DAYS=3
CTRL_TOKEN=test

# RAG
RAG_VECTOR_STORE=qdrant
RAG_DEFAULT_CHUNK_SIZE=512
RAG_DEFAULT_CHUNK_OVERLAP=50

# Qdrant
QDRANT_URL=http://127.0.0.1:6333
QDRANT_API_KEY=<qdrant_api_key>
QDRANT_COLLECTION_NAME=knowledge_vectors
QDRANT_DIMENSION=1536
QDRANT_DISTANCE=Cosine
